<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.HBox?>
<VBox alignment="CENTER" prefHeight="400.0" prefWidth="600.0"
      xmlns:fx="http://javafx.com/fxml/1" fx:controller="geekbrains.java.cloud.client.Controller"
      style="-fx-background-color: linear-gradient(#fff 0%, #eee 10%, #ddd 90%, #bbb 100%);" fx:id="rootNode">
    <HBox>
        <Button text="Скачать" onAction="#pressOnDownloadBtn" />
        <Button text="Загрузить" onAction="#pressOnUploadBtn" />
        <Button text="Обновить" onAction="#pressOnRfrshBtn" />
        <Button text="Удалить" onAction="#pressOnDltBtn" />
        <Button text="Добавить" onAction="#pressOnAddBtn" />
        <Button text="Вперед" onAction="#pressOnFrwrdBtn" />
        <Button text="Назад" onAction="#pressOnBckBtn" />
        <!--<Button text="Авторизация" onAction="#pressOnAuthBtn" />-->
    </HBox>
    <ListView fx:id="filesList" VBox.vgrow="ALWAYS"/>
    <ListView fx:id="serverFilesList" VBox.vgrow="ALWAYS"/>
</VBox>